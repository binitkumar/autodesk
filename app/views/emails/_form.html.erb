<%= f.fields_for :emails do |email| %>
	<div class='nested-fields form-horizontal'>
		<fieldset>
			<legend><%= legend_type + " Email" %></legend>
			<div class="control-group">
				<label class="control-label">Email</label>
				<div class="controls">
					<%= email.text_field :value, :class => 'input-large email-field' %>
				</div>
			</div>
			<% if form_actions_visible == true %>
				<%= render :partial => "shared/form_actions" %>
			<% end %>
		</fieldset>
	</div>
<% end -%>