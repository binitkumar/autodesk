<% title "Operation Types" %>

<table>
  <tr>
    <th>Value</th>
  </tr>
  <% for operation_type in @operation_types %>
    <tr>
      <td><%= operation_type.value %></td>
      <td><%= link_to "Show", operation_type %></td>
      <td><%= link_to "Edit", edit_operation_type_path(operation_type) %></td>
      <td><%= link_to "Destroy", operation_type, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Operation Type", new_operation_type_path %></p>
