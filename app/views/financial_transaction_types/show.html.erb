<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "#{t("web-app-theme.list", :default => "List")}", financial_transaction_types_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_financial_transaction_type_path %></li>
      <li class="active"><%= link_to "#{t("web-app-theme.show", :default => "Show")}", financial_transaction_type_path %></li>
    </ul>
  </div>
  <div class="content">
    <div class="inner">
      
        <p>
          <b><%= t("activerecord.attributes.financial_transaction_type.value", :default => t("activerecord.labels.value", :default => "Value")) %>:</b>
          <%= @financial_transaction_type.value %>
        </p>
      <div class="wat-cf">
        <%= link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_financial_transaction_type_path(@financial_transaction_type), :class => "button" %>
        <%= link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), financial_transaction_type_path(@financial_transaction_type), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
      </div>
    </div>
  </div>
</div>


