<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "#{t("web-app-theme.list", :default => "List")}", address_employers_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_address_employer_path %></li>
      <li class="active"><%= link_to "#{t("web-app-theme.show", :default => "Show")}", address_employer_path %></li>
    </ul>
  </div>
  <div class="content">
    <div class="inner">
      
        <p>
          <b><%= t("activerecord.attributes.address_employer.address_id", :default => t("activerecord.labels.address_id", :default => "Address")) %>:</b>
          <%= @address_employer.address_id %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.address_employer.employer_id", :default => t("activerecord.labels.employer_id", :default => "Employer")) %>:</b>
          <%= @address_employer.employer_id %>
        </p>
      <div class="wat-cf">
        <%= link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_address_employer_path(@address_employer), :class => "button" %>
        <%= link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), address_employer_path(@address_employer), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>
