<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first active"><%= link_to "#{t("web-app-theme.list", :default => "List")}", trims_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_trim_path %></li>
    </ul>
  </div>
  <div class="content">
    <h2 class="title"><%= t("web-app-theme.all", :default => "All")  %> Trims</h2>
    <div class="inner">
      <table class="table">
        <tr>
          <th class="first">ID</th>
                    <th>
            <%= t("activerecord.attributes.trim.value", :default => t("activerecord.labels.value", :default => "Value")) %>
          </th>
                    <th><%= t("web-app-theme.created_at", :default => "Created at")  %></th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @trims.each do |trim| -%>
        <tr class="<%= cycle("odd", "even") %>">
          <td>
            <%= trim.id %>
          </td>
                    <td>
            <%= link_to trim.value, trim_path(trim) %>
          </td>
                    <td>
            <%= trim.created_at %>
          </td>
          <td class="last">
            <%= link_to "#{t("web-app-theme.show", :default => "Show")}", trim_path(trim) %> |
            <%= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_trim_path(trim) %> |
            <%= link_to "#{t("web-app-theme.delete", :default => "Delete")}", trim_path(trim), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
          </td>
        </tr>
        <% end -%>
      </table>
      <div class="actions-bar wat-cf">
        <div class="actions">
        </div>
        
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>
