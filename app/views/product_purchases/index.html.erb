<% title "Product Purchases" %>

<table>
  <tr>
    <th>Product</th>
    <th>Purchase</th>
  </tr>
  <% for product_purchase in @product_purchases %>
    <tr>
      <td><%= product_purchase.product_id %></td>
      <td><%= product_purchase.purchase_id %></td>
      <td><%= link_to "Show", product_purchase %></td>
      <td><%= link_to "Edit", edit_product_purchase_path(product_purchase) %></td>
      <td><%= link_to "Destroy", product_purchase, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Product Purchase", new_product_purchase_path %></p>
