<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "#{t("web-app-theme.list", :default => "List")}", dealer_funding_plans_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_dealer_funding_plan_path %></li>
      <li class="active"><%= link_to "#{t("web-app-theme.show", :default => "Show")}", dealer_funding_plan_path %></li>
    </ul>
  </div>
  <div class="content">
    <div class="inner">
      
        <p>
          <b><%= t("activerecord.attributes.dealer_funding_plan.dealer_id", :default => t("activerecord.labels.dealer_id", :default => "Dealer")) %>:</b>
          <%= @dealer_funding_plan.dealer_id %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.dealer_funding_plan.funding_plan_id", :default => t("activerecord.labels.funding_plan_id", :default => "Funding plan")) %>:</b>
          <%= @dealer_funding_plan.funding_plan_id %>
        </p>
      <div class="wat-cf">
        <%= link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_dealer_funding_plan_path(@dealer_funding_plan), :class => "button" %>
        <%= link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), dealer_funding_plan_path(@dealer_funding_plan), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>
