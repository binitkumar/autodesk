<fieldset>
	<legend><%= legend_type + " Contact Number"%>
	<div class="control-group">
		<label class="control-label">Contact Number Type</label>
		<div class="controls">
			<%= f.collection_select(:contact_number_type_id, ContactNumberType.all, :id, :value, {}, {:class => "chzn-select"}) %>
		</div>
	</div>
	<div class="control-group">
		<label class="control-label">Contact Number</label>
		<div class="controls">
			<%= f.text_field :value, :class => 'input-large telephone_uk' %>
		</div>
	</div>
	<% if form_actions_visible == true %>
		<div class="form-actions">
			<%= render :partial => "shared/form_actions" %>
		</div>
	<% end %>
</fieldset>
