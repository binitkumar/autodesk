<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "#{t("web-app-theme.list", :default => "List")}", employments_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_employment_path %></li>
      <li class="active"><%= link_to "#{t("web-app-theme.show", :default => "Show")}", employment_path %></li>
    </ul>
  </div>
  <div class="content">
    <div class="inner">
      
        <p>
          <b><%= t("activerecord.attributes.employment.employment_type_id", :default => t("activerecord.labels.employment_type_id", :default => "Employment type")) %>:</b>
          <%= @employment.employment_type_id %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.employment.income_id", :default => t("activerecord.labels.income_id", :default => "Income")) %>:</b>
          <%= @employment.income_id %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.employment.customer_id", :default => t("activerecord.labels.customer_id", :default => "Customer")) %>:</b>
          <%= @employment.customer_id %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.employment.primary", :default => t("activerecord.labels.primary", :default => "Primary")) %>:</b>
          <%= @employment.primary %>
        </p>
      <div class="wat-cf">
        <%= link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_employment_path(@employment), :class => "button" %>
        <%= link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), employment_path(@employment), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>
