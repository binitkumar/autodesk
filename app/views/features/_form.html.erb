<div class="control-group">
	<label class="control-label">Feature Type</label>
	<div class="controls">
		<%= f.collection_select(:feature_type_id, FeatureType.all, :id, :value, {}, {:class => "chzn-select"}) %>
	</div>
</div>
<div class="control-group">
	<label class="control-label">Value</label>
	<div class="controls">
		<%= f.text_field :value, :class => 'input-large' %>
	</div>
</div>
<% if form_actions_visible == true %>
	<div class="form-actions">
		<%= render :partial => "shared/form_actions" %>
	</div>
<% end %>
