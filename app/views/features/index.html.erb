<% title "Features" %>

<table>
  <tr>
    <th>Value</th>
    <th>Feature Type</th>
  </tr>
  <% for feature in @features %>
    <tr>
      <td><%= feature.value %></td>
      <td><%= feature.feature_type_id %></td>
      <td><%= link_to "Show", feature %></td>
      <td><%= link_to "Edit", edit_feature_path(feature) %></td>
      <td><%= link_to "Destroy", feature, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Feature", new_feature_path %></p>
