<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "#{t("web-app-theme.list", :default => "List")}", features_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_feature_path %></li>
      <li class="active"><%= link_to "#{t("web-app-theme.show", :default => "Show")}", feature_path %></li>
    </ul>
  </div>
  <div class="content">
    <div class="inner">
      
        <p>
          <b><%= t("activerecord.attributes.feature.value", :default => t("activerecord.labels.value", :default => "Value")) %>:</b>
          <%= @feature.value %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.feature.feature_type_id", :default => t("activerecord.labels.feature_type_id", :default => "Feature type")) %>:</b>
          <%= @feature.feature_type_id %>
        </p>
      <div class="wat-cf">
        <%= link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_feature_path(@feature), :class => "button" %>
        <%= link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), feature_path(@feature), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
      </div>
    </div>
  </div>
</div>


