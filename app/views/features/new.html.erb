<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "#{t("web-app-theme.list", :default => "List")}", features_path  %></li>
      <li class="active"><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_feature_path %></li>
    </ul>
  </div>
  <div class="content">
    <h2 class="title"><%= t("web-app-theme.new", :default => "New")%>  Feature</h2>
    <div class="inner">
      <%= form_for :feature, :url => features_path, :html => { :class => :form } do |feature_builder| -%>
        <%= render :partial => "form", :locals => {:feature => feature_builder, :form_actions_visible => false} %>
      <% end -%>
    </div>
  </div>
</div>


