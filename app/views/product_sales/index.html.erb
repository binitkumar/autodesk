<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first active"><%= link_to "#{t("web-app-theme.list", :default => "List")}", product_sales_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_product_sale_path %></li>
    </ul>
  </div>
  <div class="content">
    <h2 class="title"><%= t("web-app-theme.all", :default => "All")  %> ProductSales</h2>
    <div class="inner">
      <table class="table">
        <tr>
          <th class="first">ID</th>
                    <th>
            <%= t("activerecord.attributes.product_sale.product_id", :default => t("activerecord.labels.product_id", :default => "Product_id")) %>
          </th>
                    <th><%= t("web-app-theme.created_at", :default => "Created at")  %></th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @product_sales.each do |product_sale| -%>
        <tr class="<%= cycle("odd", "even") %>">
          <td>
            <%= product_sale.id %>
          </td>
                    <td>
            <%= link_to product_sale.product_id, product_sale_path(product_sale) %>
          </td>
                    <td>
            <%= product_sale.created_at %>
          </td>
          <td class="last">
            <%= link_to "#{t("web-app-theme.show", :default => "Show")}", product_sale_path(product_sale) %> |
            <%= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_product_sale_path(product_sale) %> |
            <%= link_to "#{t("web-app-theme.delete", :default => "Delete")}", product_sale_path(product_sale), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
          </td>
        </tr>
        <% end -%>
      </table>
      <div class="actions-bar wat-cf">
        <div class="actions">
        </div>
        
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>
