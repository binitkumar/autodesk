<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "#{t("web-app-theme.list", :default => "List")}", product_type_suppliers_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_product_type_supplier_path %></li>
      <li class="active"><%= link_to "#{t("web-app-theme.show", :default => "Show")}", product_type_supplier_path %></li>
    </ul>
  </div>
  <div class="content">
    <div class="inner">
      
        <p>
          <b><%= t("activerecord.attributes.product_type_supplier.product_type_id", :default => t("activerecord.labels.product_type_id", :default => "Product type")) %>:</b>
          <%= @product_type_supplier.product_type_id %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.product_type_supplier.supplier_id", :default => t("activerecord.labels.supplier_id", :default => "Supplier")) %>:</b>
          <%= @product_type_supplier.supplier_id %>
        </p>
      <div class="wat-cf">
        <%= link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_product_type_supplier_path(@product_type_supplier), :class => "button" %>
        <%= link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), product_type_supplier_path(@product_type_supplier), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>
