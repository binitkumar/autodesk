<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "#{t("web-app-theme.list", :default => "List")}", product_quotes_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_product_quote_path %></li>
      <li class="active"><%= link_to "#{t("web-app-theme.show", :default => "Show")}", product_quote_path %></li>
    </ul>
  </div>
  <div class="content">
    <div class="inner">
      
        <p>
          <b><%= t("activerecord.attributes.product_quote.product_id", :default => t("activerecord.labels.product_id", :default => "Product")) %>:</b>
          <%= @product_quote.product_id %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.product_quote.quote_id", :default => t("activerecord.labels.quote_id", :default => "Quote")) %>:</b>
          <%= @product_quote.quote_id %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.product_quote.tax_rate_id", :default => t("activerecord.labels.tax_rate_id", :default => "Tax rate")) %>:</b>
          <%= @product_quote.tax_rate_id %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.product_quote.currency_id", :default => t("activerecord.labels.currency_id", :default => "Currency")) %>:</b>
          <%= @product_quote.currency_id %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.product_quote.price", :default => t("activerecord.labels.price", :default => "Price")) %>:</b>
          <%= @product_quote.price %>
        </p>
      <div class="wat-cf">
        <%= link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_product_quote_path(@product_quote), :class => "button" %>
        <%= link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), product_quote_path(@product_quote), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>
