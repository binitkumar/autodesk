<fieldset>
	<div class="control-group">
		<label class="control-label">Customer Type</label>
		<div class="controls">
			<%= select("customer", "customer_type_id", CustomerType.all.collect {|p| [ p.value, p.id ] }, {}, {:class => "chzn-select"}) %>
		</div>
	</div>
	<%= f.fields_for :customer do |feature_builder| %>
		<%= render :partial => "features/fixed_feature", :locals => {:f => feature_builder, :fixed_feature_type => "First Name", :form_actions_visible => false} %>
	<% end -%>
	<%= f.fields_for :customer do |feature_builder| %>
		<%= render :partial => "features/fixed_feature", :locals => {:f => feature_builder, :fixed_feature_type => "Last Name", :form_actions_visible => false} %>
	<% end -%>
	<%= f.fields_for :customer do |feature_builder| %>
		<%= render :partial => "features/fixed_feature", :locals => {:f => feature_builder, :fixed_feature_type => "Date of Birth", :form_actions_visible => false} %>
	<% end -%>
	<% if form_actions_visible == true %>
		<div class="form-actions">
			<%= content_tag :button, :type => :submit, :class => "btn btn-info" do -%>
				Save Changes
			<% end -%>
			<%= content_tag :button, :type => :cancel, :class => "btn btn-warning" do -%>
				Cancel
			<% end -%>
		</div>
	<% end %>
</fieldset>
