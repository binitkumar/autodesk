<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "#{t("web-app-theme.list", :default => "List")}", volume_bonus_plans_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_volume_bonus_plan_path %></li>
      <li class="active"><%= link_to "#{t("web-app-theme.show", :default => "Show")}", volume_bonus_plan_path %></li>
    </ul>
  </div>
  <div class="content">
    <div class="inner">
      
        <p>
          <b><%= t("activerecord.attributes.volume_bonus_plan.name", :default => t("activerecord.labels.name", :default => "Name")) %>:</b>
          <%= @volume_bonus_plan.name %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.volume_bonus_plan.value", :default => t("activerecord.labels.value", :default => "Value")) %>:</b>
          <%= @volume_bonus_plan.value %>
        </p>
      <div class="wat-cf">
        <%= link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_volume_bonus_plan_path(@volume_bonus_plan), :class => "button" %>
        <%= link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), volume_bonus_plan_path(@volume_bonus_plan), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
      </div>
    </div>
  </div>
</div>


