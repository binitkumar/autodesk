<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "#{t("web-app-theme.list", :default => "List")}", sales_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_sale_path %></li>
      <li class="active"><%= link_to "#{t("web-app-theme.show", :default => "Show")}", sale_path %></li>
    </ul>
  </div>
  <div class="content">
    <div class="inner">
      
        <p>
          <b><%= t("activerecord.attributes.sale.dealer_id", :default => t("activerecord.labels.dealer_id", :default => "Dealer")) %>:</b>
          <%= @sale.dealer_id %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.sale.customer_id", :default => t("activerecord.labels.customer_id", :default => "Customer")) %>:</b>
          <%= @sale.customer_id %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.sale.date", :default => t("activerecord.labels.date", :default => "Date")) %>:</b>
          <%= @sale.date %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.sale.sale_type_id", :default => t("activerecord.labels.sale_type_id", :default => "Sale type")) %>:</b>
          <%= @sale.sale_type_id %>
        </p>
      <div class="wat-cf">
        <%= link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_sale_path(@sale), :class => "button" %>
        <%= link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), sale_path(@sale), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>
