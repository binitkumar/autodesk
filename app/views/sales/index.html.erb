<div class="container">
	<div class="row">
			<div class = "span12">
				<div class="nonboxy-widget">
	    			<div class="widget-head">
						<h5>Sales</h5>
					</div>
      				<table class="data-tbl-simple table table-bordered">
        			<thead>
						<tr>
	          				<th class="first">
								ID
							</th>
	                    	<th>
								Customer
	          				</th>
	                    	<th>
								Vehicle
							</th>
	          				<th>
								Date of Sale
							</th>
							<th class="actions">
								Actions
							</th>
	        			</tr>
					</thead>
					<tbody>
        				<% @sales.each do |sale| %>
	        			<tr class="<%= cycle("odd", "even") %>">
	          				<td>
	            				<%= sale.id %>
	          				</td>
	                    	<td>
	            				<%= link_to sale.customer.features.where(:feature_type_id => "1").first.value + " " + sale.customer.features.where(:feature_type_id => "2").first.value, customer_path(sale.customer) %>
	          				</td>
	                    	<td>
	            				<%= link_to sale.vehicles.first.trim.model.make.value + " " + sale.vehicles.first.trim.model.value, vehicle_path(sale.vehicles.first) %>
	          				</td>
							<td>
								<%= sale.date %>
							</td>
	          				<td class="actions">
	            				<%= link_to "#{t("web-app-theme.show", :default => "Show", :class => "color-icons page_white_edit_co")}", sale_path(sale) %> |
	            				<%= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_sale_path(sale) %> |
	            				<%= link_to "#{t("web-app-theme.delete", :default => "Delete")}", sale_path(sale), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
	          				</td>
	        			</tr>
	        			<% end %>
					</tbody>
      			</table>
	    		</div>
			</div>
		</div>
</div>