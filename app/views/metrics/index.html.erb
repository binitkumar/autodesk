<% title "Metrics" %>

<table>
  <tr>
    <th>Name</th>
    <th>Operation Type</th>
  </tr>
  <% for metric in @metrics %>
    <tr>
      <td><%= metric.name %></td>
      <td><%= metric.operation_type_id %></td>
      <td><%= link_to "Show", metric %></td>
      <td><%= link_to "Edit", edit_metric_path(metric) %></td>
      <td><%= link_to "Destroy", metric, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Metric", new_metric_path %></p>
