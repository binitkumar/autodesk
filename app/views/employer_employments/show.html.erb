<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "#{t("web-app-theme.list", :default => "List")}", employer_employments_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_employer_employment_path %></li>
      <li class="active"><%= link_to "#{t("web-app-theme.show", :default => "Show")}", employer_employment_path %></li>
    </ul>
  </div>
  <div class="content">
    <div class="inner">
      
        <p>
          <b><%= t("activerecord.attributes.employer_employment.employer_id", :default => t("activerecord.labels.employer_id", :default => "Employer")) %>:</b>
          <%= @employer_employment.employer_id %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.employer_employment.employment_id", :default => t("activerecord.labels.employment_id", :default => "Employment")) %>:</b>
          <%= @employer_employment.employment_id %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.employer_employment.start_date", :default => t("activerecord.labels.start_date", :default => "Start date")) %>:</b>
          <%= @employer_employment.start_date %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.employer_employment.end_date", :default => t("activerecord.labels.end_date", :default => "End date")) %>:</b>
          <%= @employer_employment.end_date %>
        </p>
      <div class="wat-cf">
        <%= link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_employer_employment_path(@employer_employment), :class => "button" %>
        <%= link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), employer_employment_path(@employer_employment), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>
