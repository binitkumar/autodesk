<fieldset>
	<%= vehicle.fields_for :registration_marks do |registration_mark_builder| %>
		<%= render :partial => "registration_marks/form", :locals => {:vehicle => registration_mark_builder, :form_actions_visible => false} %>
	<% end -%>
	<%= add_fixed_fields('features', ["VIN Number", "Date of Registration"], vehicle, false) %>
	<div class="row">
		<div class="span6">
			<% if form_actions_visible == true %>
				<%= render :partial => "shared/form_actions" %>
			<% end %>
		</div>
	</div>
</fieldset>