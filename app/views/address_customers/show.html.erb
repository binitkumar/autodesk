<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "#{t("web-app-theme.list", :default => "List")}", address_customers_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_address_customer_path %></li>
      <li class="active"><%= link_to "#{t("web-app-theme.show", :default => "Show")}", address_customer_path %></li>
    </ul>
  </div>
  <div class="content">
    <div class="inner">
      
        <p>
          <b><%= t("activerecord.attributes.address_customer.address_id", :default => t("activerecord.labels.address_id", :default => "Address")) %>:</b>
          <%= @address_customer.address_id %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.address_customer.customer_id", :default => t("activerecord.labels.customer_id", :default => "Customer")) %>:</b>
          <%= @address_customer.customer_id %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.address_customer.start_date", :default => t("activerecord.labels.start_date", :default => "Start date")) %>:</b>
          <%= @address_customer.start_date %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.address_customer.end_date", :default => t("activerecord.labels.end_date", :default => "End date")) %>:</b>
          <%= @address_customer.end_date %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.address_customer.primary", :default => t("activerecord.labels.primary", :default => "Primary")) %>:</b>
          <%= @address_customer.primary %>
        </p>
      <div class="wat-cf">
        <%= link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_address_customer_path(@address_customer), :class => "button" %>
        <%= link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), address_customer_path(@address_customer), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>
