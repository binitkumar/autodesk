source 'https://rubygems.org'

gem 'rails', '3.2.6'

# Bundle edge Rails instead:
# gem 'rails', :git => 'git://github.com/rails/rails.git'

gem 'sqlite3'

# Use nifty generators for quickly creating scaffolds
gem 'nifty-generators'

# Use devise for authentication (with omniauth) and cancan for permissions
gem 'devise'
gem 'omniauth'
gem 'cancan'

# Use Formtastic and Attrtastic to make creation of forms & show pages quicker
gem 'formtastic'
gem 'attrtastic'

# Use web-app-theme gem for easy creation of initial layout (repository version not updated; pulling from Github)
gem 'web-app-theme', :git =>'git://github.com/chonan/web-app-theme.git'

# Use the ffaker gem to auto-generate test data

gem 'ffaker'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'

  # See https://github.com/sstephenson/execjs#readme for more supported runtimes
  # gem 'therubyracer', :platforms => :ruby

  gem 'uglifier', '>= 1.0.3'
end

gem 'jquery-rails'

# To use ActiveModel has_secure_password
# gem 'bcrypt-ruby', '~> 3.0.0'

# To use Jbuilder templates for JSON
# gem 'jbuilder'

# Use unicorn as the app server
# gem 'unicorn'

# Deploy with Capistrano
# gem 'capistrano'

# To use debugger
# gem 'debugger'

gem "mocha", :group => :test
